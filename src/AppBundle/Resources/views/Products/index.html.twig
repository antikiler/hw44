{% extends "site.html.twig" %}

{% block title %}Список всех продуктов{% endblock %}

{% block content %}
    <h1>Список всех продуктов</h1>
    <a href="{{ path('productNew') }}" class="btn-add">Добавить продукт</a>
    <table border="1" width="100%" style="border: lemonchiffon;">
        <tr>
            <th>#id</th>
            <th>Название продукта</th>
            <th>Описание</th>
            <th>Цена</th>
        </tr>
        {% for product in products %}
        <tr onclick="window.location='{{ path('productDetail',{'id':product.id})}}'">
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price }}</td>
        </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет продуктов</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
